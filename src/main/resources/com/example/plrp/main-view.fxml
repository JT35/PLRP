<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="615.0" prefWidth="615.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.plrp.MainController">
   <center>
      <VBox alignment="CENTER" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="64.0" />
          </padding>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Scan Barcode:">
            <font>
               <Font name="Arial" size="12.0" />
            </font>
         </Text>
         <TextField fx:id="barcodePrompt" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="164.0">
            <font>
               <Font name="Arial" size="12.0" />
            </font>
         </TextField>
          <Button fx:id="processBtn" defaultButton="true" onAction="#onProcessClick" text="Process">
            <font>
               <Font name="Arial" size="12.0" />
            </font>
         </Button>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </BorderPane.margin>
         <children>
            <Button mnemonicParsing="false" onAction="#onInventoryClick" prefHeight="25.0" prefWidth="80.0" text="Inventory">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets right="4.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onLogsClick" prefHeight="25.0" prefWidth="77.0" text="Logs">
               <font>
                  <Font name="Arial" size="12.0" />
               </font></Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
